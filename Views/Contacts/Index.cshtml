@model List<Contact>
@inject address_book.IImageService _imageService

@{
    ViewData["Title"] = "Contacts Page";
}

@if (Model.Count.Equals(0))
{
    <div class="text-center">
    <p>No Contacts to display.</p>
</div>
}
else
{

    <div class="container">
    <h2>Contact List</h2>
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Image</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Full Name</th>
                <th>Address</th>
                <th>City</th>
                <th>Province</th>
                <th>Postal Code</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Created</th>
                <!-- Add headers for other fields as needed -->
            </tr>
        </thead>
        <tbody class="table-striped">
            @foreach (var contact in Model)
                {
                    <tr>
                        <td><img width="50px" height="50px"
                                src="@_imageService.ConvertByteArrayToFile(contact.ImageData, contact.ImageType)" alt=""
                                srcset=""></td>
                        <td>@contact.FirstName</td>
                        <td>@contact.LastName</td>
                        <td>@contact.FullName</td>
                        <td>@contact.Address</td>
                        <td>@contact.City</td>
                        <td>@contact.Province</td>
                        <td>@contact.PostalCode</td>
                        <td>@contact.Phone</td>
                        <td>@contact.Email</td>
                        <td>@contact.Created.ToShortDateString()</td>
                        <!-- Display other fields as needed -->
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
